{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/discord",
        "destination": "/discord.html"
      },
      {
        "source": "/forums",
        "destination": "/forums.html"
      }
    ]
  }
}
